{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",               // ⬅️ CHANGED from "./src" to "."
    "paths": {
      "@bambucamp/shared-types": ["../../packages/shared-types/dist"]
    },

    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "files": ["./src/types/index.d.ts"]
}
